# --- Compose ---
COMPOSE_PROJECT_NAME=ccc

# --- Postgres (Docker) ---
POSTGRES_DB=ccc
POSTGRES_USER=ccc
POSTGRES_PASSWORD=CHANGE_ME

# SQLAlchemy (usa o hostname do serviço do Compose: "db")
DATABASE_URL=postgresql+psycopg://ccc:CHANGE_ME@db:5432/ccc

# Fuso horário dos containers
TZ=Europe/Lisbon

# --- Backend (FastAPI) ---
# Token *apenas* para DEMO (não é segredo real)
API_DEMO_TOKEN=demo-token
# Lista de origens CORS separadas por vírgulas. Em dev deixa *.
ALLOW_ORIGINS=*

# --- Frontend (Next.js) ---
# Variáveis públicas (nunca ponhas segredos aqui)
NEXT_PUBLIC_API_BASE=http://localhost:8000
NEXT_PUBLIC_API_TOKEN=demo-token

# Porta do FE
PORT=3000
